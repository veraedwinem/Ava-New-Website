---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = "Bienvenido a Alianza Vida Abundante",
  subtitle = "Ministros sanos, iglesias sanas.<br/>Iglesias sanas, comunidades sanas.",
  backgroundImage = "/uploads/church-default.webp",
  ctaText = "YouTube",
  ctaLink = "https://www.youtube.com/channel/UCAondjOaylh84ktFbKsGw2g?sub_confirmation=1",
} = Astro.props;
---

<section
  class="relative min-h-[70vh] flex items-center bg-cover pt-30"
  style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(${backgroundImage}); background-position: center 20%;`}
>
  <div class="container">
    <div class="max-w-3xl text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
      <p class="text-xl md:text-2xl mb-8" set:html={subtitle}></p>

      <div class="flex flex-wrap gap-4">
        <Button href={ctaLink} target="_blank" variant="primary" size="lg">
          {ctaText}
        </Button>
      </div>
    </div>
  </div>
</section>
