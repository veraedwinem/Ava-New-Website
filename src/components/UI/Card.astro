---
export interface Props {
  title: string;
  image?: {
    src: string;
    alt: string;
  };
  href?: string;
  className?: string;
  // Nuevos props para filtros
  dataTitle?: string;
  dataDescription?: string;
  dataAuthor?: string;
  dataTags?: string;
  dataDate?: string;
}

const {
  title,
  image,
  href,
  className = "",
  dataTitle,
  dataDescription,
  dataAuthor,
  dataTags,
  dataDate
} = Astro.props;
---

<div
  class={`blog-card card flex flex-col w-auto overflow-hidden bg-white rounded-lg group ${className}`}
  data-title={dataTitle}
  data-description={dataDescription}
  data-author={dataAuthor}
  data-tags={dataTags}
  data-date={dataDate}
>
  {image && (
    <div class="inset-0 overflow-hidden w-full">
      {href ? (
        <a href={href} class="block">
          <img
            src={image.src}
            alt={image.alt}
            class="w-full h-auto object-cover object-center transition-transform duration-300 group-hover:scale-105"
          />
        </a>
      ) : (
        <img
          src={image.src}
          alt={image.alt}
          class="w-full h-auto object-cover object-center transition-transform duration-300 group-hover:scale-105"
        />
      )}
    </div>
  )}

  <div class="relative p-5">
    <h3 class="mb-2 text-xl font-bold">{title}</h3>
    <div class="text-gray-700">
      <slot />
    </div>
  </div>
</div>
